<% include ./partials/header %>

<div class="container">
	<header class="jumbotron text-center">
		<h2>Blog <%= blog.title %></h2>
	</header>

	<form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input type="text" class="form-control" name="blog[title]" value="<%= blog.title %>">
		</div>
		<div class="form-group">
			<input type="text" class="form-control" name="blog[image]" value="<%=blog.image %>">
		</div>
		<div class="form-group">
			<textarea class="form-control" name="blog[body]" rows="5"><%= blog.body %></textarea>
		</div>
		<div class="form-group">	
			<button class="btn btn-warning btn-lg" type="submit">Enviar</button>
		</div>
	</form>
</div>

<% include ./partials/footer %>